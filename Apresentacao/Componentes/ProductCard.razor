<div class="product-card">
    <div class="product-image">
        <!-- Replace the background image as needed -->
        <div class="image-placeholder"></div>
    </div>
    <div class="product-details">
        <span class="product-name">@Name</span>
        <span class="product-price">@Price.ToString("F2")â‚¬</span>
    </div>
    <button class="add-to-cart-button">Adicionar ao carrinho</button>
</div>

<style>
  .product-card {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-between;
      width: 200px;
      background-color: #ffffff;
      border: 1px solid #8b8b8b;
      border-radius: 8px;
      padding: 10px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      text-align: center;
      overflow: hidden;
      font-family: Arial, sans-serif;
      height: fit-content;
  }

  .product-image {
      width: 100%;
      height: 150px;
      margin-bottom: 10px;
      background-color: #f5f5f5;
      position: relative;
      display: flex;
      justify-content: center;
      align-items: center;
  }

  .image-placeholder {
      width: 100%;
      height: 100%;
      background: repeating-linear-gradient(45deg, #d4d4d4, #d4d4d4 10px, #f7f7f7 10px, #f7f7f7 20px);
  }

  .product-details {
      display: flex;
      justify-content: space-between;
      width: 100%;
      font-size: 14px;
      margin-bottom: 10px;
  }

  .product-name {
      font-weight: bold;
      color: #333;
  }

  .product-price {
      font-weight: bold;
      color: #555;
  }

  .add-to-cart-button {
      width: 100%;
      padding: 8px 10px;
      background-color: #333;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 14px;
      font-weight: bold;
      transition: background-color 0.3s ease;
  }

  .add-to-cart-button:hover {
      background-color: #535252;
  }
</style>

@code {
    [Parameter] public string Name { get; set; } = "Produto";
    [Parameter] public decimal Price { get; set; } = 0.0m;
    [Parameter] public string ImageUrl { get; set; } = ""; // Optional image support
}
