@page "/gestor-producao/armazem-evas"

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f7f7f7;
    }

    h1 {
        font-size: 24px;
        color: #555;
        margin: 20px;
    }

    .container {
        width: 90%;
        margin: 0 auto;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .item {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px;
        border: 2px dashed #8b8b8b;
        border-radius: 10px;
        background-color: #fff;
    }

    .item-name {
        font-weight: bold;
        color: #555;
        margin-bottom: 10px;
    }

    .item-details {
        font-size: 14px;
        color: #777;
        text-align: center;
    }

    .back-button {
        margin: 20px auto;
        display: block;
        text-align: center;
        color: #555;
        text-decoration: none;
        font-size: 16px;
    }

    .back-button:hover {
        color: #000;
    }
</style>

<div class="container">
    <h1>Armazém de EVAs</h1>
    <div class="grid">
        @foreach (var item in ItensArmazem)
        {
            <div class="item">
                <div class="item-name">@item.Nome</div>
                <div class="item-details">Id: @item.Id<br />Stock: @item.Stock</div>
            </div>
        }
    </div>
    <div class="container">
        <LI4.Pages.Componentes.VoltarComp Href="/" />
    </div>
</div>

