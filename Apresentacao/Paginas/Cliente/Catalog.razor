@page "/cliente/catalog"
@inject HttpClient Http

<style>
  /* Layout wrapper */
  .catalog-layout {
      display: grid;
      grid-template-columns: 250px auto 320px;
      height: 100vh;
  }

  /* Right Sidebar */
  .right-sidebar {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      width: 250px;
      background-color: #ffffff;
      padding: 20px;
      box-shadow: -2px 0 5px rgba(0, 0, 0, 0.1);
  }

  /* Main Content */
  .catalog-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 10px;
      padding: 10px;
      justify-content: center;
      align-items: start;
  }

  /* Left Sidebar */
  .sidebar-left {
      width: 200px;
      height: 100vh;
      background-color: #ffffff;
      border-right: 1px solid #dcdcdc;
      box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
      padding: 20px;
      display: flex;
      flex-direction: column;
      gap: 20px;
  }

  .sidebar-left .filters {
      display: flex;
      flex-direction: column;
      gap: 10px;
  }

  .sidebar-left .filters label {
      display: flex;
      align-items: center;
      font-size: 14px;
      cursor: pointer;
  }

  .sidebar-left .filters input[type="radio"] {
      margin-right: 10px;
      accent-color: #007bff;
  }

  /* Button Container */
  .container {
      position: fixed;
      bottom: 10px;
      left: 10px;
  }
</style>

<div class="catalog-layout">
    <!-- Left Sidebar -->
    <div class="left-sidebar">
          <LI4.Pages.Componentes.InserirTextoComp 
          Label="Pesquisa:" 
          Id="pesquisa" 
          Placeholder="Pesquisar" 
          Value="@Pesquisa" 
          Style="width: 50%;" 
        />
        <div class="filters">
            <label>
                <input type="radio" name="sort" checked /> Alfabética ↑
            </label>
            <label>
                <input type="radio" name="sort" /> Alfabética ↓
            </label>
            <label>
                <input type="radio" name="sort" /> Preço ↑
            </label>
            <label>
                <input type="radio" name="sort" /> Preço ↓
            </label>
        </div>
    </div>

    <!-- Main Content -->
    <div class="catalog-container">
        @foreach (var product in Products)
        {
            <LI4.Pages.Componentes.ProductCard Name="@product.Name" Price="@product.Price" />
        }
    </div>

    <!-- Right Sidebar -->
    <div class="right-sidebar">
        <!-- Conteúdo adicional futuro -->
    </div>
</div>

<!-- Voltar Button -->
<div class="container">
    <LI4.Pages.Componentes.VoltarComp Href="/" />
</div>

@code {

    private string Pesquisa { get; set; } = string.Empty;

    private List<Product> Products = new()
    {
        new Product { Name = "EVA 1", Price = 1000.00m },
        new Product { Name = "EVA 2", Price = 1000.00m },
        new Product { Name = "EVA 3", Price = 1000.00m },
        new Product { Name = "EVA 4", Price = 1000.00m },
    };

    public class Product
    {
        public string Name { get; set; } = string.Empty; 
        public decimal Price { get; set; }
    }
}
