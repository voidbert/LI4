@page "/Cliente/Catalogo"

@using LI4.Apresentacao.Componentes

@namespace LI4.Apresentacao.Paginas.Cliente

<div class="catalog-layout">
    <aside class="left-sidebar">
        <SearchField Placeholder="Pesquisar" />
        <div class="filters">
            <label>
                <input type="radio" name="sort" checked /> Alfabética ↑
            </label>
            <label>
                <input type="radio" name="sort" /> Alfabética ↓
            </label>
            <label>
                <input type="radio" name="sort" /> Preço ↑
            </label>
            <label>
                <input type="radio" name="sort" /> Preço ↓
            </label>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="catalog-container">
        @foreach (var product in Products)
        {
            <ProductCard Name="@product.Name" Price="@product.Price" />
        }
    </div>

    <aside class="right-sidebar">
        <h2>Olá, @User!</h2>
        <MenuButton Title="Ver carrinho" />
        <MenuButton Title="Ver encomendas" />
        <MenuButton Title="Terminar sessão" />
    </aside>
</div>

@code {
    [Parameter]
    public string User { get; set; } = "Default";
    
    private List<Product> Products = new()
    {
        new Product { Name = "EVA 1", Price = 1000.00m },
        new Product { Name = "EVA 2", Price = 1000.00m },
        new Product { Name = "EVA 3", Price = 1000.00m },
        new Product { Name = "EVA 4", Price = 1000.00m },
    };

    public class Product
    {
        public string Name { get; set; }
        public decimal Price { get; set; }
    }
}

